<div class="ui masthead vertical segment">
  <div class="ui container">
    <div class="introduction">
      <h1 class="ui header">
        Rating
        <div class="sub header">
          A rating indicates user interest in content
        </div>
      </h1>
      <div class="ui hidden divider"></div>
      <p>
        For additional documentation on how to configure this module, please refer to the
        <LinkTo @route="modules.index">
          Getting Started
        </LinkTo>
        section and Semantic UI's module specific external documentation links below.
      </p>
      <div class="ui four item stackable tabs menu">
        <a
          class="item"
          href="http://semantic-ui.com/modules/rating.html"
          target="_blank"
        >
          Definition
        </a>
        <a
          class="item"
          href="http://semantic-ui.com/modules/rating.html#/examples"
          target="_blank"
        >
          Examples
        </a>
        <a
          class="item"
          href="http://semantic-ui.com/modules/rating.html#/usage"
          target="_blank"
        >
          Usage
        </a>
        <a
          class="item"
          href="http://semantic-ui.com/modules/rating.html#/settings"
          target="_blank"
        >
          Settings
        </a>
      </div>
    </div>
  </div>
</div>
<div class="ui main container">
  <UiExample @header="Simple Example" @subHeader="Rating with max" as |showing|>
    <UiHtml @showing={{showing}}>
      {{! BEGIN-SNIPPET rating.simple }}
      <UiRating
        @rating={{this.rating}}
        @maxRating={{7}}
        @onRate={{fn (mut this.rating)}}
      />
      {{! END-SNIPPET }}
      - Rating
      {{this.rating}}
      <button class="ui button" {{on "click" (fn this.inc)}}>
        Click me
      </button>
    </UiHtml>
    <UiAnnotation @showing={{showing}} @snippet="rating.simple.hbs" />
  </UiExample>
  <UiExample @header="Simple Example" @subHeader="Styled Rating" as |showing|>
    <UiHtml @showing={{showing}}>
      {{! BEGIN-SNIPPET rating.simple.styled }}
      <UiRating
        class="heart"
        @initialRating={{this.heartRating}}
        @onRate={{fn (mut this.heartRating)}}
        @clearable={{true}}
      />
      {{! END-SNIPPET }}
      - Rating
      {{this.heartRating}}
    </UiHtml>
    <UiAnnotation @showing={{showing}} @snippet="rating.simple.styled.hbs" />
  </UiExample>
</div>