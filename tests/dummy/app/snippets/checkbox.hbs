{{! BEGIN-SNIPPET checkbox.warning  }}
Original: onChange()
Modified: onChange(checked [Boolean])

// Description:
//  The onChange event has been modify to include a checked boolean so that properties
//  can be mutated directly on the event instead of having to wire up both onChecked
//  and onUnchecked to mutate the checked variable
{{! END-SNIPPET }}
{{! BEGIN-SNIPPET checkbox.simple  }}
<UiCheckbox label="Click Me" @checked={{this.checked}} @onChange={{fn (mut this.checked)}} />
{{! END-SNIPPET }}
{{! BEGIN-SNIPPET checkbox.simple.pre_checked  }}
<UiCheckbox
  class="toggle"
  label="I start checked!"
  @checked={{this.pre_checked}}
  @onChange={{fn (mut this.pre_checked)}}
/>
{{! END-SNIPPET }}
{{! BEGIN-SNIPPET checkbox.disabled  }}
<UiCheckbox
  label="Disabled checkbox (checked binding)"
  @checked={{this.disabled_checked}}
  @isabled={{true}}
  @onChange={{fn (mut this.disabled_checked)}}
/>
{{! END-SNIPPET }}
{{! BEGIN-SNIPPET checkbox.readOnly  }}
<UiCheckbox
  @label="Readonly checkbox (checked binding)"
  @checked={{this.readonly_checked}}
  @readonly={{true}}
  @onChange={{fn (mut this.readonly_checked)}}
/>
{{! END-SNIPPET }}